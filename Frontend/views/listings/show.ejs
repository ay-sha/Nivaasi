<% layout('/layouts/boilerplate') -%>

    <body>
        <div class="row">
            <div class="col-8 offset-3 mt-3">
                <h1>Listing Details</h3>
            </div>
            <div class="card col-6 offset-3 show-card">
                <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing Image">
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b><br>
                        <%= listing.description %> <br>
                            &#2547;<%= listing.price.toLocaleString("en-BD")%> <br>
                                <%= listing.location %> <br>
                                    <%= listing.country %>
                    </p>
                </div>
            </div>
        </div>
        <div class="btn-cls mb-4 offset-3">
            <form action="/listings/<%= listing._id %>/edit" method="GET">
                <button class="btn showedit-btn">Edit</button>
            </form>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn offset-4 del-btn">Delete</button>
            </form>
        </div>
    </body>