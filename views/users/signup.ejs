<% layout('/layouts/boilerplate') -%>
<div class="row mt-3">
    <div class="col-7 offset-3">
        <h3 style="text-align: center;" class="mt-3 mb-4">Find Your Nest, With Us!!</h3>
        <form method="POST" action="/signup" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label" >Username</label>
                <input type="text" name="username" class="form-control" required 
                    id="username">
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Give a username </div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="text" id="email" name="email" class="form-control" required>
                    <div class="invalid-feedback">Give a valid email</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label" >Password</label>
                <input type="password" name="password" class="form-control" required 
                    id="password">
                    <div class="invalid-feedback">Create a strong password!</div>
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>
        