<% layout('/layouts/boilerplate') -%>
    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }

        .filter {
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity: 0.7;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .icon-div img {
            height: 1.5rem;
            width: 1.5rem;
        }

        .filter p {
            font-size: 0.8rem;
        }
    </style>
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-bed"></i>
            </div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div class="icon-div">
                <img src="/image/iconic.svg" alt="">
            </div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-mountain-sun"></i>
            </div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-sailboat"></i>
            </div>
            <p>Boats</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Country Side</p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-snowflake"></i>
            </div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-campground"></i>
            </div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div>
                <i class="fa-solid fa-person-swimming"></i>
            </div>
            <p>Amazing Pools</p>
        </div>
        <div class="filter">
            <div class="icon-div">
                <img src="/image/farms.svg" alt="">
            </div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div class="icon-div">
                <img src="/image/island.svg" alt="">
            </div>
            <p>Island</p>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 mb-3">
        <% for(let lst of allListing){ %>
            <a href="/listings/<%= lst._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= lst.image.url %>" class="card-img-top" style="height: 20rem;" alt="Listing img">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text"> <b>
                                <%=lst.title%>
                            </b>
                        <p class="card-text description-truncated">
                            <%= lst.description %>
                                <br>
                                &#2547;<%= lst.price.toLocaleString("en-BD") %> /night
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>