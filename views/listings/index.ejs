<% layout('/layouts/boilerplate') -%>
    <body>
        <h3 class="mt-3 mb-3">Browse Stays</h3>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let lst of allListing){ %>
                <a href="/listings/<%= lst._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= lst.image %>" class="card-img-top" style="height: 20rem;" alt="Listing img">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text"> <b>
                                <%=lst.title%>
                            </b>
                            <p class="card-text description-truncated">
                                <%= lst.description %>
                            <br>
                            &#2547;<%= lst.price.toLocaleString("en-BD") %> /night
                        </p>
                    </div>
                </div>
            </a>
                <% } %>
        </div>
    </body>