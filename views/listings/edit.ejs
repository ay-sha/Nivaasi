<% layout('/layouts/boilerplate') -%>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h2 style="text-align: center;">Edit this Listing</h2>
                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation"
                    novalidate enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" class="form-control" required
                            value="<%= listing.title %>">
                            <div class="invalid-feedback">Give your stay a catchy title. </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea type="text" name="listing[description]" class="form-control"
                            required><%= listing.description %></textarea>
                            <div class="invalid-feedback">Briefly describe your space and what guests can expect.</div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="listing[price]" class="form-control" required
                                value="<%= listing.price %>">
                                <div class="invalid-feedback">Adjust nightly price.</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="listing[country]" class="form-control" required
                                value="<%= toTitleCase(listing.country) %>">
                                <div class="invalid-feedback">Which country is your place in?</div>
                            </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" class="form-control" required
                            value="<%= toTitleCase(listing.location) %>">
                            <div class="invalid-feedback">Add the exact location of your place</div>
                    </div>
                    <div class="edit-prev-img">
                        <p>New look? Upload below.</p>
                        <img src="<%= changedUrl %>" alt="">
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Image</label>
                        <input type="file" name="listing[image]" class="form-control" >
                    </div>
                    <button class="btn mb-4 mt-3 edit-btn">Edit Listing</button>
                </form>
            </div>
        </div>
    </body>