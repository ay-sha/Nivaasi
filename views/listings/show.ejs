<% layout('/layouts/boilerplate') -%>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>  <!-- jQuery -->
<script src="https://cdn.gomaps.pro/js/gomaps.min.js"></script>  <!-- GoMaps -->
<script src="/public/js/map.js"></script>  <!-- Your custom JavaScript -->

    <div class="row">
        <div class="col-8 offset-3 mt-3">
            <h3>
                <%= listing.title %>
            </h3>
        </div>
        <div class="card col-12 col-sm-10 col-md-6 offset-sm-1 offset-md-3 show-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img img-fluid w-100" alt="listing Image">
            <div class="card-body">
                <p class="card-text"> Owned by
                    <i>
                        <%= listing.owner.username %>
                    </i>
                </p>
                <p class="card-text">
                    <i><%= listing.categories %></i>
                </p>
                <p class="card-text">
                    <%= listing.description %>
                </p>
                <p class="card-text"> &#2547;<%= listing.price.toLocaleString("en-BD")%>
                </p>
                <p class="card-text">
                    <%= listing.location %>
                </p>
                <p class="card-text">
                    <%= listing.country %>
                </p>
            </div>
        </div>
    </div>
    <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
        <div class="btn-cls">
            <form action="/listings/<%= listing._id %>/edit" method="GET">
                <button class="btn showedit-btn">Edit</button>
            </form>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn del-btn">Delete</button>
            </form>
        </div>
        <% } %>
            <div class="col-12 col-sm-10 col-md-6 offset-sm-1 offset-md-3">
                <% if(currentUser) {%>
                    <hr>
                    <h4>Leave a Review</h4>
                    <form action="/listings/<%= listing._id %>/reviews" method="Post" novalidate
                        class="needs-validation">
                        <div class="mb-3 mt-3 ratings">
                            <label for="rating" class="form-label"></label>
                            <fieldset class="starability-heart">
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="commint">Comments</label>
                            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                                required></textarea>
                            <div class="invalid-feedback">Plesae add some comments for review</div>
                        </div>
                        <div class="sm-d-grid gap-2 review-submit">
                            <button class="btn btn-outline-dark review-submit-btn">Submit</button>
                        </div>

                    </form>
                    <% } %>
                        <hr>
                        <% if(listing.reviews.length>0) {%>
                        <p><b>All Reviews</b></p>
                        <div class="row">
                            <% for(review of listing.reviews){ %>
                                <div class="card col-5 col-sm-10 ms-3 mb-3">
                                    <div class="card-body mt-1">
                                        <p class="starability-result card-text" data-rating=<%=review.rating%>></p>
                                        <p class="card-text">
                                            <%= review.comment%>
                                        </p>
                                    </div>
                                    <div class="review-bottom">
                                        <h5 class="card-text author">@<%=review.author.username%>
                                        </h5>
                                        <% if(currentUser && currentUser._id.equals( review.author._id)){%>
                                            <form method="POST"
                                                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                class="mb-3 ms-3">
                                                <button class="btn btn-sm btn-outline-dark review-del">Delete</button>
                                            </form>
                                            <% } %>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                        <% } %>
            </div>
            